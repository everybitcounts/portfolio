<style>
  .hero {
    min-height: calc(100vh - 80px);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 80px 24px;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 500;
    color: #22c55e;
    margin-bottom: 24px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .hero-title {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 16px;
  }

  .greeting {
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--text-secondary);
  }

  .name {
    font-size: 4rem;
    font-weight: 700;
    letter-spacing: -0.03em;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-bottom: 24px;
  }

  .divider {
    color: var(--accent);
    margin: 0 4px;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 32px;
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: 16px;
    margin-bottom: 48px;
  }

  .hero-links {
    display: flex;
    gap: 24px;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--text-muted);
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .social-link:hover {
    color: var(--accent);
  }

  .hero-visual {
    display: flex;
    justify-content: center;
  }

  .code-window {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 12px;
    overflow: hidden;
    width: 100%;
    max-width: 480px;
    box-shadow: var(--shadow-lg);
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--card-border);
  }

  .code-dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.red { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green { background: #28c840; }

  .code-title {
    font-size: 0.75rem;
    color: var(--text-muted);
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
  }

  .code-content {
    padding: 20px;
    margin: 0;
    font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
    font-size: 0.8rem;
    line-height: 1.6;
    overflow-x: auto;
  }

  .code-content code {
    color: var(--text-secondary);
  }

  .keyword { color: #c678dd; }
  .string { color: #98c379; }
  .attr { color: #61afef; }
  .comment { color: #5c6370; }
  .bool { color: #d19a66; }

  @media (max-width: 1024px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      min-height: auto;
      padding: 60px 24px;
    }

    .hero-content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .name {
      font-size: 3rem;
    }

    .hero-description {
      max-width: 100%;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-links {
      justify-content: center;
    }

    .hero-visual {
      order: -1;
    }
  }

  @media (max-width: 480px) {
    .name {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .divider {
      display: none;
    }

    .hero-subtitle {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }

    .hero-actions .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
